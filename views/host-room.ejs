<!DOCTYPE html>
<html>

<head>
	<%- include("parts/head") %>
	<script src="/js/host-room.js" defer></script>
</head>

<body>
	<%- include("parts/topbar") %>
	<div class="bb1 mb-5 pb-2">
		<h1 id="joincode" class="title display-1 text-white center"></h1>
		<div class="container mt-5">
			<input class="form-control searchbox" name="search"
				id="quizHostCLI" type="text"
				placeholder="Run commands via CLI?">
		</div>
	</div>

	<div class="container bg-carbon
				border border-primary
				rounded py-1 mb-5" id="results">
		
		<div id="listings" class="container"></div>
		
		<div id="noresults">
			<p class="text-white display-6 mt-5 text-center">
				~ Awaiting users... ~
			</p>
			<img src="/public/shrimp.webp" width="150" height="150"
				class="mx-auto d-block"  />
		</div>
		
		<div class="row bg-white border border-primary rounded py-1 mx-5 my-4"
			style="display: none;">
			<div class="col-8">
				<p class="d-inline text-black display-6 overflow-hidden"></p>
				<p class="text-black"></p>
			</div>
			<div class="col-4">
				<a class="btn btn-primary border border-carbon
							copyUUIDButton rounded w-100 h-50 d-flex
							align-items-center justify-content-center"
					title="Copy over this player's current UUID to the command line">
					<span class="display-6">UUID</span>
				</a>
				<a class="btn btn-darkred border border-carbon
							qhostBanButton rounded w-100 h-50 d-flex
							align-items-center justify-content-center"
					title="Ban this player">
					<span class="display-6">BAN</span>
				</a>
			</div>
		</div>
	</div>
</body>

</html>
