<!DOCTYPE html>
<html>

<head>
	<%- include("parts/head") %>
</head>

<body>
	<%- include("parts/topbar") %>
	<div class="bb1 mb4 pb2">
		<h1 class="title display-1 text-white center">Sparklet News</h1>
		<h2 class="bigsubtitle center">Most recent posts</h2>
	</div>

	<div class="bb1">
	<% for (qpost of qposts) { %>
		<div class="qpostBox">
			<a href="/news/<%= qpost.uuid %>" class="nodec">
			<h2 class="fst-italic text-white">
				"<%= qpost.title %>"
			</h2>
			<h3 class="newsdescription text-white">
				from <%= qpost.author %>.<br><br>
				Posted on <%= qpost.date.toLocaleDateString() %> at
				<%= qpost.date.toLocaleTimeString(undefined,
					{timeZone: "America/New_York"}) %>
			</h3>
		</a></div>
	<% } %>
	</div>
</body>

</html>
